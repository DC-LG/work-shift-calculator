<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginController">
   <children>
      <Label alignment="CENTER" graphicTextGap="10.0" layoutX="7.0" layoutY="6.0" prefHeight="70.0" prefWidth="593.0" styleClass="my-label-pink" text="%login.label" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <font>
            <Font size="18.0" />
         </font>
         <graphic>
            <MaterialDesignIconView glyphName="ACCOUNT_CIRCLE" size="25" />
         </graphic>
      </Label>
      <BorderPane layoutY="100.0" prefHeight="500.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
         <center>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" spacing="60.0" HBox.hgrow="ALWAYS">
                     <children>
                        <JFXTextField fx:id="usernameOrEmailTextField" alignment="TOP_LEFT" focusColor="#cd6481" labelFloat="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="200.0" promptText="%login.username-or-email" styleClass="jfx-text-field" />
                        <JFXPasswordField fx:id="passwordField" focusColor="#cd6481" labelFloat="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="200.0" promptText="%password" styleClass="jfx-text-field" />
                        <JFXButton fx:id="loginButton" defaultButton="true" graphicTextGap="8.0" onAction="#loginButtonOnAction" prefHeight="35.0" prefWidth="130.0" styleClass="my-button-pink" text="%login.continue">
                           <graphic>
                              <MaterialDesignIconView glyphName="CHECKBOX_MARKED_CIRCLE_OUTLINE" size="20" />
                           </graphic></JFXButton>
                     </children>
                     <HBox.margin>
                        <Insets bottom="100.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </center>
         <bottom>
            <AnchorPane prefHeight="120.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="root-darker" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label contentDisplay="CENTER" prefHeight="32.0" prefWidth="200.0" styleClass="my-l" text="%login.create-account" textFill="WHITE" HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="registerButton" contentDisplay="RIGHT" graphicTextGap="8.0" onAction="#registerButtonOnAction" prefHeight="30.0" prefWidth="130.0" styleClass="my-button-green" text="%login.register-now" underline="true">
                           <graphic>
                              <MaterialDesignIconView glyphName="ACCOUNT_PLUS" size="20" />
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </bottom>
      </BorderPane>
   </children>
   <stylesheets>
      <URL value="@styles/buttons-dark.css" />
      <URL value="@styles/labels.css" />
      <URL value="@styles/darkTheme.css" />
   </stylesheets>
</AnchorPane>
